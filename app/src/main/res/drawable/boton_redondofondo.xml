<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >
            <stroke
                android:width="1dp"
                android:color="#C2185B" />
            <solid
                android:color="#E91E63" />

            <size android:width="100dp"        android:height="100dp"></size>
            <corners android:radius="50dp"></corners>



        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#C2185B"
                android:endColor="#E91E63"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#E91E63" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>