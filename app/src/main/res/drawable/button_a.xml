<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#B2EBF2" />
            <stroke
                android:width="1dp"
                android:color="#00BCD4" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/accent"
                android:endColor="#9C27B0"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#0097A7" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>