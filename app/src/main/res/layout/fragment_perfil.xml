<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".Navegacion"
    android:background="@color/primary_light"
    android:rowCount="5"
    android:columnCount="6">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="4"
        android:layout_column="3"
        android:id="@+id/RL4">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"

            android:minHeight="100dp"
            android:minWidth="100dp"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:src="@drawable/perfil"
            android:scaleType="centerCrop"
            android:elevation="1dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <ImageButton
            android:background="@drawable/boton_redondopeq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:elevation="15dp"
            android:layout_marginBottom="17dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="26dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:elevation="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:background="@drawable/layout_bg"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/tvbackground"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tv_usuario_perfil"
                    android:layout_gravity="left|center_horizontal"
                    android:elegantTextHeight="true"
                    android:singleLine="false"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/tvbackground"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tv__nombre_perfil"
                    android:layout_gravity="left|center_horizontal"
                    android:textStyle="bold"
                    android:layout_margin="7dp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/tvbackground"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tv_sexo_perfil"
                    android:layout_gravity="left|center_horizontal"
                    android:textStyle="bold"
                    android:layout_margin="7dp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/tvbackground"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tv_edad_perfil"
                    android:layout_gravity="left|center_horizontal"
                    android:textStyle="bold"
                    android:layout_margin="7dp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/tvbackground"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tv_peso_perfil"
                    android:layout_gravity="left|center_horizontal"
                    android:textStyle="bold"
                    android:layout_margin="7dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/tvbackground"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tv_altura_perfil"
                    android:layout_gravity="left|center_horizontal"
                    android:textStyle="bold"
                    android:layout_margin="7dp"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/tvbackground"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tv_vo2_perfil"
                    android:layout_gravity="left|center_horizontal"
                    android:textStyle="bold"
                    android:layout_margin="7dp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:clickable="true"/>

            </LinearLayout>
        </FrameLayout>

    </RelativeLayout>

    <requestFocus
        android:layout_row="4"
        android:layout_column="5" />

</GridLayout>
